Algoritmo "Contrario"


Var

   nome:caracter

   contador, total_l:inteiro

Inicio

   escreval("Digite seu nome:")
   leia(nome)

   escreval("")

   escreval("Seu nome ao contrário é:")

   escreval("")

   para contador de compr(nome) até 1 passo -1 faça
      escreva (copia(nome;contador;1) )

   fimpara


Fimalgoritmo